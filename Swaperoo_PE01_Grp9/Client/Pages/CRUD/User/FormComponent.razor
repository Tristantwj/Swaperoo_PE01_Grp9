@using Swaperoo_PE01_Grp9.Client.Components

<EditForm Model="@user" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled ="@Disabled">
        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@user.Name" class="form-control" />
                <ValidationMessage For="@(() => user.Name)" />
            </div>
        </div>
        <div class="form-group">
            <label>Region: </label>
            <div>
                <InputSelect @bind-Value="user.Region" class="form-control">
                <option value="north">North</option>
                <option value="south">South</option>
                <option value="east">East</option>
                <option value="west">West</option>
                </InputSelect>
                <ValidationMessage For="@(()=>user.Region)"></ValidationMessage>
            </div>
        </div>
        <div class="form-group">
            <label>Email: </label>
            <div>
                <InputText @bind-Value="@user.Email" class="form-control" />
                <ValidationMessage For="@(() => user.Email)" />
            </div>
        </div>
        <div class="form-group">
            <label>Description: </label>
            <div>
                <InputText @bind-Value="@user.Description" class="form-control" />
                <ValidationMessage For="@(() => user.Name)" />
            </div>
        </div>
        <div class="form-group">
            <label>Profile Picture: </label>
            <div>
                <InputText @bind-Value="@user.profilepicture" class="form-control" />
                <ValidationMessage For="@(() => user.profilepicture)" />
            </div>
        </div>
        <div class="form-group">
            <label>Role: </label>
            <div>
                <InputSelect @bind-Value="user.Role" class="form-control">
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </InputSelect>
                <ValidationMessage For="@(()=>user.Role)"></ValidationMessage>
            </div>
        </div>
    </fieldset>


    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="users" />

</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public User? user { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
