@page "/chats/create/"
@inject HttpClient _client
@inject NavigationManager _navManager
@inject IJSRuntime JSRuntime
@layout NoMenuLayout

<h3 class="card-title">Create New Chat</h3>
<hr />
<br />

<FormComponent ButtonText="Create Chat" chat="chat" OnValidSubmit="@CreateChat" />

@code {
    Chat chat = new Chat();

    private async Task CreateChat()
    {
        if (string.IsNullOrWhiteSpace(chat.Name))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please enter a chat name.");
            return;
        }
        try
        {
            await _client.PostAsJsonAsync(Endpoints.CategorysEndpoint, chat);
            _navManager.NavigateTo("/chats/");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating chat: {ex.Message}");
        }
    }
}